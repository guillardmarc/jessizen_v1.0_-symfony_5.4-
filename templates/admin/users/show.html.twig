{% extends 'base_dashboard.html.twig' %}

{% block title %}/Utilisateur {{ user.pseudo }}{% endblock %}

{% block header %}
    <header class="bg-glass">
        <div class="container">
            <div class="vh-20 d-flex flex-column flex-lg-row align-items-center justify-content-evenly">
                <h1 class="display-1">
                    Utilisateur {{ user.pseudo }}
                </h1>
                <div class="btn-group">
                    <a href="{{ path('app_users_index') }}" class="btn btn-outline-secondary-custom" title="Retour vers la liste des articles">
                        <i class="bi bi-list-ul"></i>
                    </a>
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-outline-warning" title="Modifier l'article">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    {{ include('admin/users/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <section class="my-5 p-3 bg-glass">
        <table class="table table-sm table-striped">
            <tbody>
                <tr>
                    <th>
                        Id
                    </th>
                    <td>
                        {{ user.id }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Email
                    </th>
                    <td>
                        {{ user.email }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Rôles</th>
                    <td>
                        {{ user.roles ? user.roles|json_encode : '' }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Mot de passe haché
                    </th>
                    <td>
                        {{ user.password }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Date de création
                    </th>
                    <td>
                        {{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Date de modification
                    </th>
                    <td>
                        {{ user.modifiedAt ? user.modifiedAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Pseudo
                    </th>
                    <td>
                        {{ user.pseudo }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Photo de profil
                    </th>
                    <td>
                        Alt: {{ user.pictureProfilAlt }}
                        <br>
                        Nom: {{ user.pictureProfilName }}
                        <br>
                        <img class="img-fluid" src="{{ asset(user.pictureProfilLink) }}" alt="">
                    </td>
                </tr>
                <tr>
                    <th>
                        Date de naissance
                    </th>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>
                        Plus d'info
                    </th>
                    <td>
                        {{ user.moreInfo }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Email vérifier
                    </th>
                    <td>
                        {{ user.isVerified ? 'Oui': 'Non' }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Règlement du site accepter
                    </th>
                    <td>
                        {{ user.websiteSettlementAccept ? 'Oui' : 'Non' }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Liens
                    </th>
                    <td>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
{% endblock %}
