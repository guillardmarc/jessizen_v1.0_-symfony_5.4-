{{ form_start(form) }}
    <p class="text-center bg-warning fs-5 fw-bolder">
        Les champs signaler par une étoile sont oblicatoire
    </p>
    <div class="mb-3">
        {{ form_row(form.title) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.moreInfo) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.picture) }}
        {% if app.request.attributes.get('_route') == 'app_categories_edit' %}
            {% if category.pictureLink %}
                <h5>
                    Image actuel
                </h5>
                <p class="border border-warning text-center fs-6 fst-italic">
                    L'image des suprimé dès vous changer d'image.
                </p>
                <div class="d-flex align-items-center justify-content-evenly">
                    <div class="position-relative">
                        <img src="{{ asset(category.pictureLink) }}" class="img-square-vh-20">
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
    <div class="d-grid col-lg-4 mx-auto mt-3">
        <button class="btn btn-dark-custom rounded-pill" type="submit">
            {{ button_label|default('Créer') }}
        </button>
    </div>
{{ form_end(form) }}
