<form class="btn btn-outline-danger" method="post" action="{{ path('app_categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer la catégorie?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn m-0 p-0" title="Supprimer">
        <i class="bi bi-trash"></i>
    </button>
</form>
