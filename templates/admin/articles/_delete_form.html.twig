<form class="btn btn-outline-danger" method="post" action="{{ path('app_articles_delet', {'id': article.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer articles?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn m-0 p-0" title="Supprimer">
        <i class="bi bi-trash"></i>
        id article{{article.id}}
    </button>
</form>
