{% extends 'base_dashboard.html.twig' %}

{% block title %}/Liste des informations des mise à jour du site web{% endblock %}

{% block header %}
    <header class="bg-glass">
        <div class="container">
            <div class="vh-20 d-flex flex-column flex-lg-row align-items-center justify-content-center">
                <h1 class="display-1">
                    Liste des informations des mise à jour du site web
                </h1>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <section class="my-5 p-3 bg-glass">
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Titre
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Plus d'info
                    </th>
                    <th>
                        Sous version
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for websites_update in websites_updates %}
                <tr>
                    <td>
                        {{ websites_update.id }}
                    </td>
                    <td>
                        {{ websites_update.title }}
                    </td>
                    <td>
                        {{ websites_update.date ? websites_update.date|date('Y-m-d') : '' }}
                    </td>
                    <td>
                        {{ websites_update.moreInfo }}
                    </td>
                    <td>
                        {{ websites_update.underVersion }}
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('app_websites_updates_show', {'id': websites_update.id}) }}" class="btn btn-outline-secondary-custom" title="Voir l'article">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_websites_updates_edit', {'id': websites_update.id}) }}" class="btn btn-outline-warning" title="Modifier l'article">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            {{ include('admin/websites_updates/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Pas d'enregistrements</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
