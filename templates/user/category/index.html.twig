{% extends 'base_dashboard.html.twig' %}

{% block title %}/ Liste artiles favories{% endblock %}

{% block header %}
    <header class="bg-glass">
        <div class="container">
            <div class="vh-20 d-flex flex-column flex-lg-row align-items-center justify-content-center">
                <h1 class="display-1">
                    Liste de mes catégories favories
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    {# Presentation block #}
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                {% for category in app.user.categoriesFavories %}
                    <div class="col-lg-4 mb-3">
                        <a class="card bg-dark-custom text-black form-01 shadows-custom" href="{{ path('app_category_view', {'slug':category.slug}) }}" title="Cliquer ici pour consulter les articles de la catégorie">
                            <img src="{{ asset(category.pictureLink) }}" class="img-square-vh-40" alt="{{ category.pictureAlt }}">
                            <div class="card-img-overlay bg-glass d-flex flex-column align-items-center justify-content-evenly">
                                <h5 class="card-title text-center">
                                    {{ category.title }}
                                </h5>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <h3 class="card-title text-center">
                        Pas de categories favories
                    </h3>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}