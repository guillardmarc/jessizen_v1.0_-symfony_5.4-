{% extends 'base_dashboard.html.twig' %}

{% block title %}/Modifier l'article {{ article.title }}{% endblock %}

{% block header %}
    <header class="bg-glass">
        <div class="container">
            <div class="vh-20 d-flex flex-column flex-lg-row align-items-center justify-content-evenly">
                <h1 class="display-1">
                    Article {{ article.title }}
                </h1>
                <div class="btn-group">
                    <a href="{{ path('app_articles_list') }}" class="btn btn-outline-secondary-custom" title="Retour vers la liste des articles">
                        <i class="bi bi-list-ul"></i>
                    </a>
                    {{ include('author/articles/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <section class="my-5 p-3 bg-glass">
        {{ include('author/articles/_form.html.twig', {'button_label': 'Modifier'}) }}
    </section>

    {# {{ include('admin/articles/_delete_form.html.twig') }} #}
{% endblock %}
